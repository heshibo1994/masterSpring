<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">
    <!-- 引用Bean -->
    <bean id = "pMonitor" class="com.smart.introduce.ControlablePerformaceMonitor" />
    <bean id = "forumServiceTarget" class = "com.smart.introduce.ForumService"/>
    <bean id = "forumService" class = "org.springframework.aop.framework.ProxyFactoryBean"
        p:interfaces ="com.smart.introduce.Mointorable"
          p:target-ref = "forumServiceTarget"
          p:interceptorName = "pMonitor"
          p:proxtTargetClass = "true"
    />


</beans>
